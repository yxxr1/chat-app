{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "rootDir": "src",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@components/*": ["./src/components/*"],
      "@actions/*": ["./src/store/actions/*"],
      "@store": ["./src/store/index.ts"],
      "@store/*": ["./src/store/*"],
      "@utils/*": ["./src/utils/*"],
      "@screens/*": ["./src/screens/*"],
      "@containers/*": ["./src/containers/*"],
      "@styles/*": ["./src/styles/*"],
      "@const/*": ["./src/const/*"],
      "@ws": ["./src/ws/index.ts"],
      "@ws/*": ["./src/ws/*"]
    },
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }]
  },
  "include": [
    "src",
    "declarations.d.ts"
  ]
}
